            ),
            'updated' => array(
                'type' => 'int',
                'not null' => TRUE,
            ),
        ),
        'primary key' => array('id'),
    );
    $schema['telegram_tokens'] = [
        'description' => 'Table for storing token otp from telegram',
        'fields' => [
            'id' => [
                'description' => 'The primary identifier for tokens data',
                'type' => 'serial',
                'not null' => TRUE,
                'unsigned' => TRUE,
