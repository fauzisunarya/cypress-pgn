                        <div class="row mt-4">
                            <div class="form-group col-md-6">
                                <label class="pb-2">Tags</label>
                                <input type="text" class="form-control border" name="tags" value="{{paket.tags['value']}}" />
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="form-group col-md-6">
                                <label class="pb-2">Category</label>
                                {% for keyname, value in paket.category.option %}
                                    {# {% if paket.category.selected[keyname] %} #}
                                        {% set checked = paket.category.selected[keyname] ? "checked" : "" %}
                                    {# {% endif %} #}
                                    <div class="form-check">
                                        <input type="checkbox" name="category[{{value.id}}]" id="category_{{value.id}}" value="{{value.id}}" {{checked}} /> 
                                        <label for="category_{{value.id}}" class="form-check-label" style="cursor:pointer;">{{keyname}}</label>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <input type="submit" name="edit-paket" value="Update" class="btn btn-primary float-end" />
                        </div>
                    </div>
