{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{%
  set classes = [
    'btn',
    'text-white',
    attributes.id == 'edit-submit' or attributes.id == 'edit-preview' ? '' : 'btn-secondary mb-3'
  ]
%}

<input{{ attributes.addClass(is_authpage ? 'btn btn-primary' : classes ) }} />{{ children }}
